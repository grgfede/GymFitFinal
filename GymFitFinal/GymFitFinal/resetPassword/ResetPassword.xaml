<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             NavigationPage.HasNavigationBar="False"
             x:Class="GymFitFinal.resetPassword.ResetPassword">
    <ContentPage.Content>
        <AbsoluteLayout>

            <Label Text="Resetta la tua password"
                   Font="19"
                   AbsoluteLayout.LayoutBounds="0.5,0.3,0.7,0.1"
                   AbsoluteLayout.LayoutFlags="All"
                   HorizontalTextAlignment="Center"
                   LineBreakMode="WordWrap"
                   FontFamily="Montserrat-Bold.ttf#Montserrat"
                   TextColor="#4a6572"/>

            <Label Text="Se non ricordi la tua password, qui puoi reimpostarla"
                   Font="13"
                   HorizontalTextAlignment="Center"
                   AbsoluteLayout.LayoutBounds="0.5, 0.4, 0.7, 0.2"
                   AbsoluteLayout.LayoutFlags="All"
                   LineBreakMode="WordWrap"
                   FontFamily="Montserrat-Regular.ttf#Montserrat"
                   TextColor="#4a6572"/>

            <Entry x:Name="lblEmailReset"
                   PlaceholderColor="#4a6572"
                   Placeholder="Email"
                   FontFamily="Montserrat-Regular.ttf#Montserrat"
                   TextColor="#4a6572"
                   AbsoluteLayout.LayoutFlags="All"
                   AbsoluteLayout.LayoutBounds="0.5,0.5,0.7,0.1"/>

            <Button BackgroundColor="#64B5F6"
                    Font="13"
                    TextColor="White"
                    Text="Invio"
                    CornerRadius="20"
                    AbsoluteLayout.LayoutBounds="0.5,0.7,0.5,0.08"
                    AbsoluteLayout.LayoutFlags="All"
                    FontFamily="Montserrat-Regular.ttf#Montserrat"
                    Clicked="DoResetPassword"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
                           Margin="50,0,0,0"
                           FontFamily="BebasKai.ttf"/>







                    <Label HorizontalOptions="Center"
                           Grid.Row="7"
                           Grid.ColumnSpan="2"
                           FontFamily="BebasKai.ttf#Bold"
                           Text="Giovedì"/>

                    <CheckBox x:Name="chkGioMat"
                              IsEnabled="False"
                              Margin="0,0,0,0"
                              Grid.Row="8"
                              Grid.Column="0"/>

                    <Label Grid.Row="8"
                           Grid.Column="0"
                           Text="Mattina"
                           VerticalOptions="Center"
                           Margin="40,0,0,0"
                           FontFamily="BebasKai.ttf"/>

                    <CheckBox x:Name="chkGioPom"

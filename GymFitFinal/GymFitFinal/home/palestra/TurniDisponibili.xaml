                    <Label Grid.Row="14"
                           Grid.Column="1"
                           Text="Pomeriggio"
                           VerticalOptions="Center"
                           Margin="50,0,0,0"
                           FontFamily="BebasKai.ttf"/>
                </Grid>
            </ScrollView>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
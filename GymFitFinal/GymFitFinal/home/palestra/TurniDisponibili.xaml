                           Grid.Column="1"
                           Text="Pomeriggio"
                           VerticalOptions="Center"
                           Margin="50,0,0,0"
                           FontFamily="BebasKai.ttf"/>



                    <Label HorizontalOptions="Center"
                           Grid.Row="9"
                           Grid.ColumnSpan="2"
                           FontFamily="BebasKai.ttf#Bold"
                           Text="Venerdì"/>

                    <CheckBox x:Name="chkVenMat"
                              IsEnabled="False"
                              Margin="0,0,0,0"
                              Grid.Row="10"
                              Grid.Column="0"/>

                    <Label Grid.Row="10"
                           Grid.Column="0"
                           Text="Mattina"
                           VerticalOptions="Center"
                           Margin="40,0,0,0"
                           FontFamily="BebasKai.ttf"/>

                    <CheckBox x:Name="chkVenPom"
                               Margin="10,0,0,0"
                              IsEnabled="False"
                              Grid.Row="10"
                              Grid.Column="1"/>

                    <Label Grid.Row="10"
                           Grid.Column="1"
                           Text="Pomeriggio"
                           VerticalOptions="Center"
                           Margin="50,0,0,0"
                           FontFamily="BebasKai.ttf"/>






                    <Label HorizontalOptions="Center"
                               Grid.Row="11"
                               Grid.ColumnSpan="2"
                               FontFamily="BebasKai.ttf#Bold"
                               Text="Sabato"/>

                    <CheckBox x:Name="chkSabMat"
                              IsEnabled="False"
                              Margin="0,0,0,0"
                              Grid.Row="12"
                              Grid.Column="0"/>

                    <Label Grid.Row="12"
                           Grid.Column="0"
                           Text="Mattina"
                           VerticalOptions="Center"
                           Margin="40,0,0,0"
                           FontFamily="BebasKai.ttf"/>

                    <CheckBox x:Name="chkSabPom"

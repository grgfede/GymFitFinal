                           Grid.ColumnSpan="2"
                           FontFamily="BebasKai.ttf#Bold"
                           Text="Domenica"/>

                    <CheckBox x:Name="chkDomMat"
                              IsEnabled="False"
                              Margin="0,0,0,0"

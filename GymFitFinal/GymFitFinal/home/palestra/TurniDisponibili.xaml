<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Title="Turni disponibili"
             x:Class="GymFitFinal.home.palestra.TurniDisponibili">
    <!--  <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="gear_profile.png"
                     Clicked="ToolbarItem_Follow"/>

    </ContentPage.ToolbarItems> -->
    <ContentPage.Content>
        <AbsoluteLayout BackgroundColor="#FACO5E">

            <Image Source="ic_turni.png" 
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   AbsoluteLayout.LayoutBounds="0.42, 0.04, 0.9, 0.35"
                   AbsoluteLayout.LayoutFlags="All"
                   Opacity="0.9"/>

            <Frame Margin="0,10,0,0"
                   BackgroundColor="#FFFFFF"
                   AbsoluteLayout.LayoutBounds="0.5, 0.83, 0.9, 0.65"
                   AbsoluteLayout.LayoutFlags="All"
                   CornerRadius="5"
                   Opacity="0.7"/>

            <ScrollView  
                   BackgroundColor="Transparent"
                   AbsoluteLayout.LayoutBounds="0.51, 0.82, 0.97, 0.63"
                   AbsoluteLayout.LayoutFlags="All">

                <Grid HorizontalOptions="Center" VerticalOptions="Center" Margin="20,20,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Margin="0,10,0,0"
                           HorizontalOptions="CenterAndExpand"
                           Grid.Row="0"
                           Grid.ColumnSpan="2"
                           Font="30"
                           TextColor="#2D3047"
                           Text="Turni Disponibili"
                           FontFamily="BebasKai.ttf#BebasKai"/>

                    <Label HorizontalOptions="Center"
                           Grid.Row="1"
                           Grid.ColumnSpan="2"
                           FontFamily="BebasKai.ttf#Bold"
                           Text="Lunedì"/>

                    <CheckBox x:Name="chkLunMat"
                              Margin="0,0,0,0"
                              IsEnabled="False"
                              Grid.Row="2"
                              Grid.Column="0"/>

                    <Label Grid.Row="2"
                           Grid.Column="0"
                           Text="Mattina"
                           VerticalOptions="Center"
                           Margin="40,0,0,0"
                           FontFamily="BebasKai.ttf"/>

                    <CheckBox x:Name="chkLunPom"
                               Margin="10,0,0,0"
                              IsEnabled="False"
                              Grid.Row="2"
                              Grid.Column="1"/>

                    <Label Grid.Row="2"
                           Grid.Column="1"
                           Text="Pomeriggio"
                           VerticalOptions="Center"
                           Margin="50,0,0,0"
                           FontFamily="BebasKai.ttf"/>


                    <Label HorizontalOptions="Center"
                           Grid.Row="3"
                           Grid.ColumnSpan="2"
                           FontFamily="BebasKai.ttf#Bold"
                           Text="Martedì"/>

                    <CheckBox x:Name="chkMarMat"
                              IsEnabled="False"
                              Margin="0,0,0,0"
                              Grid.Row="4"
                              Grid.Column="0"/>

                    <Label Grid.Row="4"
                           Grid.Column="0"
                           Text="Mattina"
                           VerticalOptions="Center"
                           Margin="40,0,0,0"
                           FontFamily="BebasKai.ttf"/>

                    <CheckBox x:Name="chkMarPom"
                              Margin="10,0,0,0"
                              IsEnabled="False"
                              Grid.Row="4"
                              Grid.Column="1"/>

                    <Label Grid.Row="4"
                           Grid.Column="1"
                           Text="Pomeriggio"
                           VerticalOptions="Center"
                           Margin="50,0,0,0"
                           FontFamily="BebasKai.ttf"/>




                    <Label HorizontalOptions="Center"
                           Grid.Row="5"
                           Grid.ColumnSpan="2"
                           FontFamily="BebasKai.ttf#Bold"
                           Text="Mercoledì"/>

                    <CheckBox x:Name="chkMerMat"
                              IsEnabled="False"
                              Margin="0,0,0,0"
                              Grid.Row="6"
                              Grid.Column="0"/>

                    <Label Grid.Row="6"
                           Grid.Column="0"
                           Text="Mattina"
                           VerticalOptions="Center"
                           Margin="40,0,0,0"
                           FontFamily="BebasKai.ttf"/>

                    <CheckBox x:Name="chkMerPom"

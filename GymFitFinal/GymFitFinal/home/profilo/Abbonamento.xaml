<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Title="Dettagli abbonamento"
             x:Class="GymFitFinal.home.profilo.Abbonamento">
    <ContentPage.Content>
        <AbsoluteLayout BackgroundColor="#64B5F6">

            
            <Frame AbsoluteLayout.LayoutBounds="0.42, 0.315, 0.9, 0.45"
                   AbsoluteLayout.LayoutFlags="All"
                   BackgroundColor="#FFFFFF"
                   Opacity="0.7"
                   CornerRadius="10">
            </Frame>

            <Image Source="ic_abbonamento.png" 
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   AbsoluteLayout.LayoutBounds="0.42, 0.05, 0.9, 0.35"
                   AbsoluteLayout.LayoutFlags="All"
                   Opacity="0.9"/>

            <Label AbsoluteLayout.LayoutBounds="0.5, 0.75, 0.8, 0.6"
                   AbsoluteLayout.LayoutFlags="All"
                   FontFamily="Montserrat-Regular.ttf#Montserrat"
                   FontSize="Medium"
                   Text="Tipo abbonamento: ">
            </Label>
            <Label AbsoluteLayout.LayoutBounds="0.5, 0.95, 0.8, 0.6"
                   AbsoluteLayout.LayoutFlags="All"
                   FontFamily="Montserrat-Regular.ttf#Montserrat"
                   FontSize="Medium"
                   Text="Data inizio: ">
            </Label>
            <Label AbsoluteLayout.LayoutBounds="0.5, 1.15, 0.8, 0.6"
                   AbsoluteLayout.LayoutFlags="All"
                   FontFamily="Montserrat-Regular.ttf#Montserrat"
                   FontSize="Medium"
                   Text="Data scadenza: ">
            </Label>
            <Label AbsoluteLayout.LayoutBounds="0.5, 1.35, 0.8, 0.6"
                   AbsoluteLayout.LayoutFlags="All"
                   FontFamily="Montserrat-Regular.ttf#Montserrat"
                   FontSize="Medium"
                   Text="Costo: ">
            </Label>

            <Label  x:Name="lblBack"
                    AbsoluteLayout.LayoutBounds="0.5, 1.9, 0.8, 0.6"
                   AbsoluteLayout.LayoutFlags="All"
                    VerticalOptions="StartAndExpand"
                    HorizontalOptions="Center"
                    Font="14"
                    FontFamily="Montserrat-Bold.ttf#Montserrat"
                    TextColor="#4a6572"
                    Text="Torna alla home "
                    />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Title="Dettagli abbonamento"
             x:Class="GymFitFinal.home.profilo.Abbonamento">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="gear_profile.png"
                     Clicked="ToolbarItem_Follow"/>

    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <AbsoluteLayout BackgroundColor="#64B5F6">

            <Frame BackgroundColor="#FFFFFF"
                   AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.9, 0.35"
                   AbsoluteLayout.LayoutFlags="All"
                   CornerRadius="5"
                   Opacity="0.7"
                   ></Frame>
        
            <Image Source="ic_abbonamento.png" 
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   AbsoluteLayout.LayoutBounds="0.42, 0.05, 0.9, 0.35"
                   AbsoluteLayout.LayoutFlags="All"
                   Opacity="0.9"/>

            <Label AbsoluteLayout.LayoutBounds="0.5, 0.90, 0.8, 0.6"
                   AbsoluteLayout.LayoutFlags="All"
                   FontFamily="Montserrat-Regular.ttf#Montserrat"
                   FontSize="Medium"
                   Text="Tipo abbonamento: ">
            </Label>
            <Label AbsoluteLayout.LayoutBounds="0.5, 1.10, 0.8, 0.6"
                   AbsoluteLayout.LayoutFlags="All"
                   FontFamily="Montserrat-Regular.ttf#Montserrat"
                   FontSize="Medium"
                   Text="Data inizio: ">
            </Label>
            <Label AbsoluteLayout.LayoutBounds="0.5, 1.30, 0.8, 0.6"
                   AbsoluteLayout.LayoutFlags="All"
                   FontFamily="Montserrat-Regular.ttf#Montserrat"
                   FontSize="Medium"
                   Text="Data scadenza: ">
            </Label>
            <Label AbsoluteLayout.LayoutBounds="0.5, 1.50, 0.8, 0.6"
                   AbsoluteLayout.LayoutFlags="All"
                   FontFamily="Montserrat-Regular.ttf#Montserrat"
                   FontSize="Medium"
                   Text="Costo: ">
            </Label>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>